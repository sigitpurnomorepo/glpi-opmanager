{
    "name": "yourusername/glpi-opmanager",
    "description": "GLPI OPManager Integration Plugin - Bidirectional integration between GLPI and OPManager for automated ticket creation and synchronization",
    "type": "glpi-plugin",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "glpi",
        "plugin",
        "opmanager",
        "integration",
        "webhook",
        "ticket",
        "monitoring",
        "network",
        "itil"
    ],
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com",
            "homepage": "https://github.com/yourusername"
        }
    ],
    "require": {
        "php": ">=7.4",
        "glpi/glpi": "^10.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpcompatibility/php-compatibility": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "PluginOpmanager\\": "inc/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PluginOpmanager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 inc/",
        "cs-fix": "phpcbf --standard=PSR12 inc/",
        "stan": "phpstan analyse inc/",
        "compatibility": "phpcs --standard=PHPCompatibility --runtime-set testVersion 7.4- inc/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "glpi": {
            "name": "OPManager Integration",
            "version": "1.0.0",
            "license": "GPL v2+",
            "homepage": "https://github.com/yourusername/glpi-opmanager",
            "requirements": {
                "glpi": {
                    "min": "10.0.0",
                    "max": "11.0.0"
                }
            }
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/yourusername/glpi-opmanager"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}
